{{#paper-toolbar}}
  {{#paper-toolbar-tools}}
    {{#paper-button iconButton=true}}
      {{paper-icon "settings"}}
    {{/paper-button}}
    <h2>
      TM
    </h2>
    {{#each menu as |entry|}}
    {{#paper-button}}
      {{#link-to 'tasks' (query-params state=entry.name) class="item"}}
        {{entry.label}} {{get states entry.name}}
        {{#paper-tooltip position="bottom"}}
        {{entry.name}}
      {{/paper-tooltip}}
      {{/link-to}}
      
      {{/paper-button}}
    {{/each}}
    <span class="flex"></span>
    {{#paper-menu as |menu|}}
      {{#menu.trigger}}
        {{#paper-button iconButton=true}}
          {{paper-icon "more_vert"}}
        {{/paper-button}}
      {{/menu.trigger}}
      {{#menu.content as |content|}}
        {{#content.menu-item onClick="onScript"}}
          Scripts
        {{/content.menu-item}}
        {{#content.menu-item onClick="onWorker"}}
          Workers
        {{/content.menu-item}}
      {{/menu.content}}
    {{/paper-menu}}
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}
