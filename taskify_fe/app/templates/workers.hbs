<div class="ui segment">
  <table class="ui small selectable table">
    <thead>
      <tr>
        <th>Worker</th>
        <th>State</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.workers as |worker|}}
      {{#link-to 'worker' (query-params worker=worker.id) tagName="tr" class=worker.stateColor }}
      <td>{{worker.name}}</td>
      <td>{{worker.state}}</td>
      {{/link-to}} {{/each}}
    </tbody>
  </table>
</div>
<div class="ui segment">
  <table class="ui small selectable table">
    <thead>
      <tr>
        <th>Queue</th>
        <th>State</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.queues as |queue|}}
      <tr class="{{queue.stateColor}}">
        <td>{{queue.name}}</td>
        <td>{{queue.state}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>